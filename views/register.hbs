<h1 class="text-center">Skate Park</h1>

    <div class="col-md-4 mx-auto">
    <h2 class="text-center">Crea tu cuenta</h2>
    <form action="/register" method="POST" enctype="multipart/form-data" novalidate>
    <div>
        {{#if errors}}
        <div>
            {{#each errors}}
            <div class="alert alert-danger" role="alert">
                {{this.msg}}
            </div>
            {{/each}}
        </div>
       {{/if}}
    </div>
    <div class="mb-3">
        <label class="form-label" for="name">Name</label>
        <input class="form-control" type="text" name="name" id="name" placeholder="Ej. John Doe" value="{{old.name}}">
    </div>
    <div class="mb-3">
        <label class="form-label" for="email">Email</label>
        <input class="form-control" type="email" name="email" id="email" placeholder="Ej. WcWp2@example.com" value="{{old.email}}">
    </div>
    <div class="mb-3">
        <label class="form-label" for="experience">AÃ±os de Experiencia</label>
        <input class="form-control" type="number" name="experience" id="experience" placeholder="Ej. 5" value="{{old.experience}}">
    </div>
    <div class="mb-3">
        <label class="form-label" for="especialty">Especialidad</label>
        <input class="form-control" type="text" name="especialty" id="especialty" placeholder="Ej. Snowboarder" value="{{old.especialty}}">
    </div>
    <div class="mb-3">
        <label class="form-label" for="password">Password</label>
        <input class="form-control" type="password" name="password" id="password" placeholder="Ej. ********">
    </div>
    <div class="mb-3">
        <label class="form-label" for="confirm_password">Confirm Password</label>
        <input class="form-control" type="password" name="confirm_password" id="confirm_password" placeholder="Ej. ********">
    </div>
    <div class="mb-3">
        <label for="image">Image:</label>
        <input type="file" id="image" name="image">
      </div>
    <div>
        <input class="btn btn-success d-block my w-100" type="submit" value="Register">
    </div>
    
    </form>
</div>